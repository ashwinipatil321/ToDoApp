
var toDo = angular.module('ToDo');

toDo.factory('homeService', function($http) {
	console.log("its coming to service");
	
	var notes ={};


	notes.saveNote = function(token, note) {
		console.log(note);
		return $http({
			method : 'POST',
			url : 'saveNote',
			data : note,
			headers : {
				'login' : token
			}
		});
	}

	notes.getAllNotes= function(token) {
		return $http({
			method : 'GET',
			url : '/user/getAllNotes',
			headers : {
				'login' : token
			}
		});
	}
	
	notes.service=function(url,method,token,note){
		return $http({
		    method: method,
		    url: url,
		    data:note,
		    headers: {
		        'login': token
		    }
		
		});
	}
	
	return notes;
});