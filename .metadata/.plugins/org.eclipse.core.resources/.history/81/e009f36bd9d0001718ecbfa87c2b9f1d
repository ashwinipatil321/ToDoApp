package com.bridgelabz.User.DAO;

import java.util.List;
import org.hibernate.HibernateException;
import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.springframework.beans.factory.annotation.Autowired;
import com.bridgelabz.User.model.Note;
import com.bridgelabz.User.model.User;

public class NoteDaoImplemention implements NoteDao {
	@Autowired
	SessionFactory factory;
	public SessionFactory getFactory() {
		return factory;
	}
	public void setFactory(SessionFactory factory) {
		this.factory = factory;
	}
	@Override
	public int saveNote(Note note) {
		Session session  = factory.getCurrentSession();
		int id=0;
		try
		{
			id= (int) session.save(note);
			
		}catch(HibernateException e){
			e.printStackTrace();
		}
		return id;
	}
	@Override
	public boolean updateNote(Note note) {
		Session session  = factory.getCurrentSession();
		try
		{
			session.saveOrUpdate(note);
		}catch(HibernateException e){
				return false;
			}
		return true;
	}
	@Override
	public boolean deleteNote(Note note) {
		Session session  = factory.getCurrentSession();
		try
		{
			session.delete(note);

		}catch(HibernateException e){
				return false;
			}
		return true;
	}
	@Override
	public List<Note> getAllNotes(User user) {
		Session session  = factory.getCurrentSession();
		User user1 = session.get(User.class, user.getUserID());
		List<Note> note = user1.getNotes();
		note.size();
		 
		return note;
	 }
	@Override
	public Note getNoteById(int noteId) {
		Session session  = factory.getCurrentSession();
		Note note = session.get(Note.class, noteId);
		session.close();
		return note;
	}
}
