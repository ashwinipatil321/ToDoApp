package com.bridgelabz.User.Utility;

import javax.mail.internet.MimeMessage;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.mail.MailSender;
import org.springframework.mail.SimpleMailMessage;
import org.springframework.mail.javamail.JavaMailSender;
import org.springframework.mail.javamail.MimeMessageHelper;

public class SendMail {
	@Autowired
	private static JavaMailSender mailSender;
	/*@Autowired
	private static SimpleMailMessage simpleMailMessage;
	*/
	public static void sendMail(String to, String subject, String msg, String url) {
		MimeMessage message = mailSender.createMimeMessage();
		try {
			MimeMessageHelper helper = new MimeMessageHelper(message, true);
			helper.setFrom("amnpatil8@gmail.com");
			System.out.println(to);
			helper.setTo(to);
			helper.setSubject(subject);
			helper.setText(msg + " "+url);
			System.out.println("Mail Send Scussfully!!!");
		} catch (Exception e) {
			System.out.println("Mail not send");
			e.printStackTrace();
		}
	     mailSender.send(message);
	}
}
