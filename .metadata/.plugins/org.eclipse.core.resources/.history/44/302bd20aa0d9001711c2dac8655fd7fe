
var toDo = angular.module('ToDo');

toDo.factory('noteService', function($http) {
console.log("its coming to service");
var notes ={};

notes.showNotes = function(token) {
	return $http({
		method : 'POST',
		url : 'showNotes',
		headers : {
			'login' : token
		}
	});
}
	notes.service = function(method,url,note) {
		console.log("inside login service method");
		
		return $http({
			method : method,
			url : url,
			data : note,
			  headers: {
			        'token': localStorage.getItem('token')
	}
		})
	}
	
	noteList.saveNote = function(token, note) {
		console.log(note);
		return $http({
			method : 'POST',
			url : 'saveNote',
			data : note,
			headers : {
				'login' : token
			}
		});
	}
	
	return notes;
});